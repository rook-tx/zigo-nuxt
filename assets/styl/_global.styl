// ----------
// Global elements
// ----------

html, body, #__nuxt, .app, .sec
	height 100%
	overflow hidden

a
	color inherit
	text-decoration: none

img, svg
	display block
	height auto
	max-width 100%

h1, h2, h3, h4, h5, p
	font-weight normal
	mgn(1,0)
	word-spacing -.25em

h1
	letter-spacing -.03em

h2, h3, h4, h5
	max-width $pwidth * 1rem

p
	max-width $pwidth * 1em

	a
		border-bottom: 1p solid $pink

h1
	fs(mp(4))

	+above($mobile)
		fs(mp(5))

h2
	fs(mp(4))

h3
	fs(mp(3))

h4
	fs(mp(2))

h5
	fs(mp(1))

pre
	font-family monospace
	fs(mp(0))

ul, ol
	padding 0
	margin 0
	list-style none

button, input, label, select, textarea
	display block
	font inherit
	line-height $let
	width 100%

button, input, select, textarea
	appearance none
	background none
	border-radius 0
	outline 0

	&:focus
		border-color $blk

button, [type=submit]
	cursor pointer
	mgn(0, auto)
	pad(.25, 1)
	width auto
