@import '_fonts'
@import '_variables'

div, a, ul, ol, li
	box-sizing border-box

html, body
	margin 0
	min-height 100%

html
	background $b
	color darken($w, 10%)
	font-family $song
	font-size ($p / 16) * 100%
	-webkit-tap-highlight-color transparent

body
	font-size 100%
	line-height $let

@import '_global'
