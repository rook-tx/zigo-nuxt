{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended"
  ],
  "rules": {
    "vue/multi-word-component-names": 0,
    "vue/no-v-html": 0,
    "vue/v-on-event-hyphenation": 0,
    "vue/require-explicit-emits": 0,
    "vue/component-name-in-template-casing": [
      2, 
      "kebab-case"
    ],
    
    "no-useless-escape": 1,
    
    "prefer-const": 1,
    "prefer-object-spread": 1,
    "prefer-spread": 1,
    "prefer-template": 1,

    "array-bracket-spacing": [
      2,
      "always"
    ],
    "comma-spacing": 1,
    "eol-last": 1,
    "indent": ["error", 2],
    "key-spacing": 1,
    "no-multiple-empty-lines": [
      1,
      {
        "max": 1
      }
    ],    
    "no-trailing-spaces": 1,
    "object-curly-spacing": [
      1,
      "always"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "never"
    ]
  }
}
